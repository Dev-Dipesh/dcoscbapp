{
  "id": "/sellnews-api",
  "groups": [
    {
      "id": "/sellnews-api/apps",
      "apps": [
        {
          "id": "/sellnews-api/apps/api",
          "cpus": 0.5,
          "mem": 1048,
          "instances": 2,
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "devdipesh/sellnews-api:v1.0.0",
              "network": "BRIDGE",
              "forcePullImage": true,
              "portMappings": [
                {
                  "containerPort": 3000,
                  "hostPort": 3000,
                  "servicePort": 3000,
                  "protocol": "tcp"
                }
              ]
            }
          },
          "healthChecks": [{
			      "protocol": "HTTP",
			      "portIndex": 0,
			      "maxConsecutiveFailures": 3
			    }],
          "labels": {
            "DCOS_SERVICE_NAME": "sellnews-api",
            "DCOS_SERVICE_SCHEME": "http",
            "DCOS_SERVICE_PORT_INDEX": "0"
          },
          "env": {
            "END_POINT": "dbhost:dbport",
            "N1QL_SERVICE": "dbhost:n1qlport",
            "HOST_NAME": "dbhost",
            "NODE_ENV": "development"
          }
        }
      ]
    },
    {
		  "id": "/sellnews-api/data",
		  "apps": [
		  	{
		  		"id": "/sellnews-api/data/couchbase",
			  	"cpus": 1,
			  	"mem": 2048,
			  	"instances": 1,
			  	"container": {
					  "type": "DOCKER",
					  "docker": {
					    "image": "devdipesh/couchbase-ce:v4.0.0",
					    "network": "BRIDGE",
					    "portMappings": [
					      {
					        "hostPort": 8091,
					        "containerPort": 8091,
					        "servicePort": 8091
					      },
					      {
					        "hostPort": 8092,
					        "containerPort": 8092,
					        "servicePort": 8092
					      },
					      {
					        "hostPort": 8093,
					        "containerPort": 8093,
					        "servicePort": 8093
					      },
					      {
					        "hostPort": 11210,
					        "containerPort": 11210,
					        "servicePort": 11210
					      }
					    ],
					    "forcePullImage": true,
					    "parameters": []
					  },
					  "volumes": []
					},
					"labels": {
		    		"HAPROXY_GROUP": "external"
		  		},
		  		"env": {},
		  		"healthChecks": []
		  	}
		  ]
	  }
  ]
}
